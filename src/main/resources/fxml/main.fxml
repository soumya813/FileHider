<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="views.fx.MainController">
   <top>
      <!-- Header -->
      <VBox styleClass="header">
         <children>
            <HBox alignment="CENTER_LEFT" spacing="20.0" styleClass="header-content">
               <children>
                  <Label styleClass="app-title-small" text="FileHider">
                     <font>
                        <Font name="System Bold" size="24.0" />
                     </font>
                  </Label>
                  <Region HBox.hgrow="ALWAYS" />
                  <Label fx:id="userLabel" styleClass="user-label" text="Welcome User">
                     <font>
                        <Font size="14.0" />
                     </font>
                  </Label>
                  <Button fx:id="logoutBtn" mnemonicParsing="false" onAction="#handleLogout" styleClass="logout-button" text="Logout" />
               </children>
               <padding>
                  <Insets bottom="15.0" left="20.0" right="20.0" top="15.0" />
               </padding>
            </HBox>
         </children>
      </VBox>
   </top>
   <center>
      <VBox spacing="20.0" styleClass="main-content">
         <children>
            <!-- Header Info -->
            <VBox alignment="CENTER" spacing="10.0">
               <children>
                  <Label styleClass="section-title" text="File Management Dashboard">
                     <font>
                        <Font size="18.0" />
                     </font>
                  </Label>
                  <Label styleClass="section-description" text="Securely hide your files or unhide previously hidden files">
                     <font>
                        <Font size="14.0" />
                     </font>
                  </Label>
               </children>
               <padding>
                  <Insets bottom="10.0" left="20.0" right="20.0" top="10.0" />
               </padding>
            </VBox>
            
            <!-- Action Buttons -->
            <VBox spacing="15.0" styleClass="action-bar">
               <children>
                  <HBox alignment="CENTER" spacing="20.0">
                     <children>
                        <VBox alignment="CENTER" spacing="5.0">
                           <children>
                              <Button fx:id="hideFileBtn" mnemonicParsing="false" onAction="#hideNewFile" prefWidth="180.0" styleClass="action-button" text="🗂️ Hide New File" />
                              <Label text="Select and hide a file from your computer" styleClass="button-description" />
                           </children>
                        </VBox>
                        <VBox alignment="CENTER" spacing="5.0">
                           <children>
                              <Button fx:id="unhideFileBtn" mnemonicParsing="false" onAction="#unhideFile" prefWidth="180.0" styleClass="action-button" text="📂 Unhide Selected File" />
                              <Label text="Restore a hidden file back to original location" styleClass="button-description" />
                           </children>
                        </VBox>
                     </children>
                  </HBox>
                  <HBox alignment="CENTER" spacing="20.0">
                     <children>
                        <VBox alignment="CENTER" spacing="5.0">
                           <children>
                              <Button fx:id="showFilesBtn" mnemonicParsing="false" onAction="#showHiddenFiles" prefWidth="180.0" styleClass="secondary-button" text="👁️ Refresh File List" />
                              <Label text="Update and show all your hidden files" styleClass="button-description" />
                           </children>
                        </VBox>
                        <VBox alignment="CENTER" spacing="5.0">
                           <children>
                              <Button fx:id="refreshBtn" mnemonicParsing="false" onAction="#refreshFileList" prefWidth="180.0" styleClass="secondary-button" text="🔄 Refresh Data" />
                              <Label text="Reload the latest file information" styleClass="button-description" />
                           </children>
                        </VBox>
                     </children>
                  </HBox>
               </children>
               <padding>
                  <Insets bottom="15.0" left="20.0" right="20.0" top="15.0" />
               </padding>
            </VBox>
            
            <!-- File List -->
            <VBox VBox.vgrow="ALWAYS">
               <children>
                  <VBox spacing="5.0">
                     <children>
                        <Label styleClass="section-title" text="📋 Your Hidden Files">
                           <font>
                              <Font size="16.0" />
                           </font>
                        </Label>
                        <Label styleClass="section-description" text="Click on a file row to select it, then use 'Unhide Selected File' button to restore">
                           <font>
                              <Font size="12.0" />
                           </font>
                        </Label>
                     </children>
                  </VBox>
                  <TableView fx:id="fileTable" VBox.vgrow="ALWAYS">
                     <columns>
                        <TableColumn fx:id="fileNameColumn" prefWidth="300.0" text="📄 File Name" />
                        <TableColumn fx:id="fileSizeColumn" prefWidth="100.0" text="💾 Size" />
                        <TableColumn fx:id="hiddenDateColumn" prefWidth="150.0" text="📅 Hidden Date" />
                        <TableColumn fx:id="actionsColumn" prefWidth="150.0" text="⚡ Actions" />
                     </columns>
                     <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                     </columnResizePolicy>
                  </TableView>
                  <Label styleClass="table-info" text="💡 Tip: If the table is empty, click 'Refresh File List' to load your hidden files">
                     <font>
                        <Font size="11.0" />
                     </font>
                  </Label>
               </children>
               <padding>
                  <Insets left="20.0" right="20.0" />
               </padding>
            </VBox>
            
            <!-- Status and Progress -->
            <VBox spacing="10.0">
               <children>
                  <HBox alignment="CENTER_LEFT" spacing="10.0">
                     <children>
                        <Label fx:id="statusLabel" styleClass="status-label" />
                        <Region HBox.hgrow="ALWAYS" />
                        <Label fx:id="fileCountLabel" styleClass="info-label" text="0 files hidden" />
                     </children>
                  </HBox>
                  <ProgressBar fx:id="progressBar" prefWidth="200.0" progress="0.0" visible="false" />
               </children>
               <padding>
                  <Insets bottom="20.0" left="20.0" right="20.0" />
               </padding>
            </VBox>
         </children>
      </VBox>
   </center>
</BorderPane>
